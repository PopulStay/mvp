{
  "$schema":"http://json-schema.org/draft-06/schema#",
  "description": "Peer-to-Peer Home Sharing",
  "type": "object",
  "required": ["type","location","price", "pictures"],
  "properties": {
    "type": {
      "type": "string",
      "title": "Type",
      "enum": [
        "Entire place",
        "Private room",
        "Shared room"
      ],
      "default":"Entire place"
    },
    "location": {
      "type": "string",
      "title": "Location"
    },
    "price": {
      "type": "number",
      "title": "Price in ETH"
    },
    "pictures": {
      "type": "array",
      "title": "Select photos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    }
  }
}
