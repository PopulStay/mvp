{
  "$schema":"http://json-schema.org/draft-06/schema#",
  "description": "Peer-to-Peer Home Sharing",
  "type": "object",
  "required": ["category", "beds", "location","price", "pictures"],
  "properties": {
    "category": {
      "type": "string",
      "title": "Type",
      "enum": [
        "Entire place",
        "Private room",
        "Shared room"
      ],
      "default":"Entire place"
    },
    "beds": {
      "type": "integer",
      "title": "Beds",
      "enum": [
        1,
        2,
        3,
        4,
        5,
        6,
        7
      ]
    },
    "location": {
      "type": "string",
      "title": "Location"
    },
    "price": {
      "type": "number",
      "title": "Price in PPS"
    },
    "pictures": {
      "type": "array",
      "title": "Select photos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    }
  }
}
