{
  "$schema":"http://json-schema.org/draft-06/schema#",
  "description": "Distributed Ticketmaster/Eventbrite",
  "type": "object",
  "required": ["name","category","description","price"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Title",
      "minLength": 3,
      "maxLength": 100
    },
    "category": {
      "type": "string",
      "title": "Category",
      "enum": [
        "Arts",
        "Classes & Workshops",
        "Conference",
        "Fundraisers",
        "Music",
        "Non-profit event",
        "Other",
        "Sports",
        "Theater",
        "Tradeshow"
      ]
    },
    "datetime": {
        "type": "string",
        "format": "date-time",
        "title": "When"
    },
    "location": {
      "type": "string",
      "title": "Where"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "minLength": 10,
      "maxLength": 1024
    },
    "price": {
      "type": "number",
      "title": "Price in ETH"
    },
    "pictures": {
      "type": "array",
      "title": "Select photos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    }
  }
}
